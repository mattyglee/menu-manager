<%= form_for(@food, html: { class: "form-horizontal" }) do |f| %>
  <% if @food.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
      <% @food.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, class: "control-label" %>
    <div class="controls">
    	<%= f.text_field :name %>
    </div>
  </div>
  <div class="control-group">
	  <%= f.label :food_group, class: "control-label" %>
  	<div class="controls">
  		<%= f.select :food_group_id, FoodGroup.all.collect {|fg| [ fg.name, fg.id ] } %>
    </div>
	</div>
  <div class="control-group">
	  <%= f.label :preferred_unit, class: "control-label" %>
  	<div class="controls">
  		<%= collection_select('food', 'preferred_unit', Food::PREFERRED_UNITS, :last, :last) %>
    </div>
	</div>
  <div class="control-group">
    <%= f.label :millilitres, class: "control-label" %>
    <div class="controls">
	    <%= f.number_field :millilitres %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :grams, class: "control-label" %>
    <div class="controls">
	    <%= f.number_field :grams %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :item_description, class: "control-label" %>
    <div class="controls">
	    <%= f.text_field :item_description %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
