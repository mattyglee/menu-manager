<h1>Ingredients</h1>

<table class="table table-bordered">
  <tr>
    <th>Unit</th>
    <th>Quantity</th>
    <th>Description</th>
    <th>Food</th>
    <th>Recipe</th>
    <th>Action</th>
  </tr>

<% @ingredients.each do |ingredient| %>
  <tr>
    <td><%= ingredient.unit %></td>
    <td><%= ingredient.quantity %></td>
    <td><%= ingredient.description %></td>
    <td><%= ingredient.food_id %></td>
    <td><%= ingredient.recipe_id %></td>
    <td><%= link_to 'Show', ingredient %> |
    		<%= link_to 'Edit', edit_ingredient_path(ingredient) %> |
    		<%= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Ingredient', new_ingredient_path %>
